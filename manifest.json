{
  "manifest_version": 2,
  "name": "keyrama",
  "author": "cdrainxv",
  "version": "0.1.0",
  "icons": {
    "16": "images/corvo_16.png",
    "32": "images/corvo_32.png",
    "48": "images/corvo_48.png",
    "128": "images/corvo_128.png"
  },
  "browser_action": {
    "default_title": "keyrama",
    "default_icon": "images/corvo_32.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://goplay.anontpp.com/",
        "https://www.reddit.com/r/KDRAMA/*"
      ],
      "js": ["content.js", "content2.js"],
      "all_frames": false
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
